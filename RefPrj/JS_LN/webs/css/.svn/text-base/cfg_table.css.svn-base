
table.cfgTable  {
	font: normal 10pt Verdana, Arial, Helvetica, sans-serif;
	width:900px;
	margin:0 0 10px 0;
	border:1px solid  #C6D5F5;;
	border-collapse:collapse;
	
}

table.cfgTable  tr{
	font-size:10pt;
	border:1px solid #C6D5F5;
	border-collapse:collapse;
}
/*
table.cfgTable  tr:nth-child(odd) td {

background-color:#dde4f0;

}
*/

table.cfgTable  tr:hover {

background-color:#ccc;

}

table.cfgTable  td, table.cfgTable   th{
	padding:2px 5px;

	text-align:center;
	border:1px solid #C6D5F5;
}

table.cfgTable   th{
	padding:3px 5px;
	font-size:1.1em/120%;
	color:#333;
	
	background:#D2E1FD;
	
}

table div.ProgressBar {    
 position: relative;    
 width: 200px;    /* 宽度 */   
 border: 1px solid #B1D632;    
 padding: 1px;    
 }    
tabel div.ProgressBar div {    
 display: block;       
 background-color: #B1D632;  
 height: 20px; /* 高度 */   
 line-height: 20px;  /* 必须和高度一致，文本才能垂直居中 */   
 }    
table div.ProgressBar div span {       
 width: 200px; /* 宽度 */   
 text-align: center;    
 font-weight: bold;    
 } 


